<% include ../partials/header %>

<h1 class="test">Hello There from the h1</h1>

<% var numRound = round.numRound %>
<h1 style="text-align: center;">Add Winners to Round <%=numRound%></h1>


<form action="/tournaments/<%= tournament.year %>/rounds/<%= round.numRound %>?_method=PUT" method="POST">
    <% for(var j = 0; j < tournament.rounds[numRound - 1].matches.length; j++) { %>
        <% var match = tournament.rounds[numRound - 1].matches[j]; %>
        
        <% if (!match.winner) { %>
        
            <div class="form-group match">
                <% var matchNum = match.matchNumber %>
                <% var idMaker = tournament.year + "m" + match.matchNumber %>
                
                <label for="<%=idMaker%>">
                    <div class="team">
                        <% if(match.topTeam === null) { %>
                            <h5>Team TBD</h5>
                        <% } else { %>
                            <h5><%=match.topTeam.seed%>) <%=match.topTeam.name%></h5>
                        <% } %>
                    </div>
                </label>
                 <input class="form-control" type="radio" id=idMaker name="<%=matchNum%>" value="<%= match.topTeam._id %>">
                 <label>
                    <div class="team">
                        <% if(match.bottomTeam === null) { %>
                        <h5>Team TBD</h5>
                        <% } else { %>
                            <h5><%=match.bottomTeam.seed%>) <%=match.bottomTeam.name%></h5>
                        <% } %>
                    </div>
                </label> 
                 <input class="form-control" type="radio" id=idMaker name="<%=matchNum%>" value="<%= match.bottomTeam._id %>">

            </div>
        <% } %>    
    <% } %>
    <div class="form-group">
        <button class="btn btn-primary btn-lg btn-default btn-block">Submit</button>
    </div>
</form>


    
